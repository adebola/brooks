<% include ../partials/header %>

<div class="card mx-auto" style="max-width: 500px; margin-top: 100px; margin-bottom: 50px;">
  <div class="card">
    <article class="card-body">

        <div class="row">
            <div class="col-md-9">
                <h4 class="card-title mt-3 text-center text-md-left">Resend Verification E-mail</h4>
            </div>
            <div class="col-md-3">
               <div class="container mx-auto mb-3" style="max-width: 100px;">
                <img src="/images/logo.png" class="img-fluid" />
                </div>
            </div>
          </div>

      <hr />

      <form action="/auth/verify" method="POST">
        <input type="hidden"  id="_csrf" name="_csrf" value="<%=csrfToken%>" />
        <div class="form-group">
          <input
          name="email"
          class="form-control"
          placeholder="Email"
          type="email"
          required
        />
          <!-- input-group.// -->
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">Resend Verification Mail</button>
        </div>
      </form>
    </article>
  </div>
  <!-- card.// -->
</div>

<% include ../partials/footer %>
<script src="/javascripts/fixfooter.js"></script>
